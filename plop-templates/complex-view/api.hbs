import request from '@/utils/request'

export function add(data) {
  return request({
    url: '/{{ name }}',
    method: 'post',
    data
  })
}

export function del(id) {
  return request({
    url: '/{{ name }}/' + id,
    method: 'delete'
  })
}

export function edit(data) {
  return request({
    url: '/{{ name }}',
    method: 'put',
    data
  })
}

export function download{{ properCase name }}(params) {
  return request({
    url: '/{{ name }}/download',
    method: 'get',
    params,
    responseType: 'blob'
  })
}
